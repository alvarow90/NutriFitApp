@model NutriFitApp.WebAdmin.ViewModels.AsignarDietaViewModel

@{
    ViewData["Title"] = "Asignar dieta";
}

<h2 class="mt-4">Asignar dieta</h2>

<form asp-action="Asignar" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="UsuarioId" class="form-label"></label>
        <input asp-for="UsuarioId" class="form-control" />
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NutriologoId" class="form-label"></label>
        <input asp-for="NutriologoId" class="form-control" />
        <span asp-validation-for="NutriologoId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaInicio" class="form-label"></label>
        <input asp-for="FechaInicio" type="date" class="form-control" />
        <span asp-validation-for="FechaInicio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaFin" class="form-label"></label>
        <input asp-for="FechaFin" type="date" class="form-control" />
        <span asp-validation-for="FechaFin" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Asignar dieta</button>
</form>

@await Html.PartialAsync("_ValidationScriptsPartial");
