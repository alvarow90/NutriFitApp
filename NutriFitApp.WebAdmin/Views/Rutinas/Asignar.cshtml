@model NutriFitApp.WebAdmin.ViewModels.AsignarRutinaViewModel

@{
    ViewData["Title"] = "Asignar rutina";
}

<h2 class="mt-4">Asignar rutina</h2>

<form asp-action="Asignar" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="UsuarioId" class="form-label"></label>
        <input asp-for="UsuarioId" class="form-control" />
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EntrenadorId" class="form-label"></label>
        <input asp-for="EntrenadorId" class="form-control" />
        <span asp-validation-for="EntrenadorId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DuracionDias" class="form-label"></label>
        <input asp-for="DuracionDias" type="number" class="form-control" />
        <span asp-validation-for="DuracionDias" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Asignar rutina</button>
</form>

@await Html.PartialAsync("_ValidationScriptsPartial");
