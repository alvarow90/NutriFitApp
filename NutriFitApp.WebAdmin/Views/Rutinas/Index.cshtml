@model List<NutriFitApp.Shared.DTOs.UsuarioDTO>

@{
    ViewData["Title"] = "Usuarios registrados";
}

<h2 class="mt-4">Usuarios registrados</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Crear nuevo usuario</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Rol</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.Nombre</td>
                <td>@usuario.Email</td>
                <td>@usuario.Rol</td>
            </tr>
        }
    </tbody>
</table>
