<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NutriFitApp Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">NutriFit Admin</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuarios</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Nutriologos" asp-action="Index">Nutriólogos</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Entrenadores" asp-action="Index">Entrenadores</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Dietas" asp-action="Index">Dietas</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Rutinas" asp-action="Index">Rutinas</a></li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link text-danger" asp-controller="Auth" asp-action="Logout">Cerrar sesión</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="text-center text-muted mt-5">
        <hr />
        <p>NutriFitApp Admin © @DateTime.Now.Year</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
